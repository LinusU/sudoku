
cDark = hsl(151, 68%, 83%)
cLight = hsl(151, 68%, 88%)
cBorderDark = hsl(151, 68%, 50%)

.touch-ctrl
  position absolute
  width 350px
  height 460px
  top 64px
  left 50%
  margin-left -175px
  box-shadow 0px 0px 40px black
  font-family 'Noteworthy', sans-serif
  table-layout fixed
  border-collapse collapse
  td
    background cDark
    border 1px solid cBorderDark
    padding-top 12px
    vertical-align middle
    text-align center
    text-transform uppercase
    font-size 18pt
    &:first-letter
      font-size 28pt
  tr:nth-child(1), tr:nth-child(3)
    td:nth-child(2)
      background cLight
  tr:nth-child(2)
    td:nth-child(1), td:nth-child(3)
      background cLight
  tr:nth-child(4)
    td
      background cLight

.touch-ctrl
  transition transform 220ms
  &.hide
    transform translateY(420px)
