html(manifest='/cache.mf')
  head
    title Sudoku
    meta(charset='utf-8')
    meta(name='viewport', content='width=320, maximum-scale=1, user-scalable=no')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='format-detection', content='telephone=no')
    link(rel='stylesheet', type='text/css', href='/iphone.css')
    link(rel='apple-touch-icon', sizes='144x144', href='/touch-icon-144.png')
  body

    #background

    #menu
      h1 Main menu
      .btn(ontouchstart='newGame()') New game
      .btn.load(ontouchstart='loadGame()') Load game
      .btn(ontouchstart='showSelectTheme()') Select theme
      .btn.update.hide(ontouchstart='location.reload()') Update app!

    #load.hide
      h1 Select game
      div.leftright
        .btn(ontouchstart='mainMenu()') Back
        .btn(ontouchstart='loadSelectedGame()') Continue
      #slider
      #indicator

    #levels.hide
      h1 Choose difficulty
      .btn(ontouchstart='mainMenu()') Back
      .btn(ontouchstart='loadNewGame(1)')!= '<i></i><b></b><b></b><b></b>'
      .btn(ontouchstart='loadNewGame(2)')!= '<i></i><i></i><b></b><b></b>'
      .btn(ontouchstart='loadNewGame(3)')!= '<i></i><i></i><i></i><b></b>'
      .btn(ontouchstart='loadNewGame(4)')!= '<i></i><i></i><i></i><i></i>'

    #main.hide
      h1 Puzzle
      div.leftmiddleright
        .btn(ontouchstart='pauseGame()') Back
        .btn(ontouchstart='undoMove()') Undo
        .btn(ontouchstart='provideHint()') Hint
      #game

    #solved.hide
      h1 Puzzle solved
      div.success âœ”
      div.btn(ontouchstart='mainMenu()') Continue

    #themes.hide
      h1 Select theme
      .theme-gray.btn(ontouchstart='setTheme("gray")') Gray
      .theme-green.btn(ontouchstart='setTheme("green")') Green
      .theme-blue.btn(ontouchstart='setTheme("blue")') Blue
      .theme-red.btn(ontouchstart='setTheme("red")') Red

    #generating.hide Generating puzzle...

    script(type='text/javascript', src='/iphone.js')
