
.sudoku-board
  border 1px solid black
  margin 40px auto
  width 540px
  height 540px
  position relative
  &.thumb
    width 144px
    height 144px
    margin 0
    .sudoku-row
      width 144px
      height 15px
      &:nth-child(9)
        height 16px
        .sudoku-cell
          height 16px
    .sudoku-cell
      width 15px
      height 15px
      font-size 10pt
      line-height 16px
      &:nth-child(9)
        width 16px

.sudoku-click-trap
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 9999

.sudoku-hint
  top 0
  left 0
  position absolute
  opacity .5

.sudoku-hint-blur
  -webkit-filter blur(16px)

.sudoku-hint-text
  height 30px
  bottom -30px
  left 0
  right 0
  position absolute
  text-align center
  line-height 30px
  font-family 'Gill Sans', sans-serif
  font-size 10pt

.sudoku-board:not(.thumb)
  font-family 'Noteworthy', sans-serif

.sudoku-row
  width 540px
  height 59px
  border-bottom 1px solid #ccc
  &:nth-child(3),
  &:nth-child(6)
    border-bottom 1px solid black
  &:nth-child(9)
    border-bottom 0
    height 60px
    .sudoku-cell
      height 60px

.sudoku-cell
  float left
  width 59px
  height 59px
  text-align center
  line-height 60px
  font-size 20pt
  background white
  border-right 1px solid #ccc
  &:nth-child(3),
  &:nth-child(6)
    border-right 1px solid black
  &:nth-child(9)
    border-right 0
    width 60px
  &.system
    background #eee
  &.selected
    background #ffa
  &.system.selected
    background #f7f7a2
  &.invalid
    color #c00
