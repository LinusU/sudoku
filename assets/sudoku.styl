
cDark = hsl(151, 68%, 83%)
cLight = hsl(151, 68%, 88%)
cBorderDark = hsl(151, 68%, 50%)
cBorderLight = hsl(151, 68%, 70%)
cSelectedDark = hsl(151, 68%, 73%)
cSelectedLight = hsl(151, 68%, 78%)

.sudoku-board
  border 1px solid cBorderDark
  margin 40px auto
  width 540px
  height 540px
  &.thumb
    width 144px
    height 144px
    margin 0
    .sudoku-row
      width 144px
      height 15px
      &:nth-child(9)
        height 16px
        .sudoku-cell
          height 16px
    .sudoku-cell
      width 15px
      height 15px
      font-size 10pt
      line-height 16px
      &:nth-child(9)
        width 16px

.sudoku-board:not(.thumb)
  font-family 'Noteworthy', sans-serif

.sudoku-row
  width 540px
  height 59px
  border-bottom 1px solid cBorderLight
  &:nth-child(3),
  &:nth-child(6)
    border-bottom 1px solid cBorderDark
  &:nth-child(9)
    border-bottom 0
    height 60px
    .sudoku-cell
      height 60px

.sudoku-cell
  float left
  width 59px
  height 59px
  text-align center
  line-height 60px
  font-size 20pt
  border-right 1px solid cBorderLight
  &:nth-child(3),
  &:nth-child(6)
    border-right 1px solid cBorderDark
  &:nth-child(9)
    border-right 0
    width 60px
  &.system
    background #eee
  &.selected
    background #ffa
  &.system.selected
    background #f7f7a2

.sudoku-row
  .sudoku-cell
    color #666
    background cDark
    transition background 250ms
    &.selected
      background cSelectedDark
    &.system
      color #000
    &.invalid
      color #c00
  &:nth-child(1), &:nth-child(2), &:nth-child(3),
  &:nth-child(7), &:nth-child(8), &:nth-child(9)
    .sudoku-cell
      &:nth-child(4), &:nth-child(5), &:nth-child(6)
        background cLight
        &.selected
          background cSelectedLight
  &:nth-child(4), &:nth-child(5), &:nth-child(6)
    .sudoku-cell
      &:nth-child(1), &:nth-child(2), &:nth-child(3),
      &:nth-child(7), &:nth-child(8), &:nth-child(9)
        background cLight
        &.selected
          background cSelectedLight
