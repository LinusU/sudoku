
.sudoku-board
  border 1px solid #333
  margin 40px auto
  width 540px
  height 540px
  &.thumb
    width 144px
    height 144px
    margin 0
    .sudoku-row
      width 144px
      height 15px
      &:nth-child(9)
        height 16px
        .sudoku-cell
          height 16px
    .sudoku-cell
      width 15px
      height 15px
      font-size 10pt
      line-height 16px
      &:nth-child(9)
        width 16px

.sudoku-row
  width 540px
  height 59px
  border-bottom 1px solid #ccc
  &:nth-child(3),
  &:nth-child(6)
    border-bottom 1px solid #333
  &:nth-child(9)
    border-bottom 0
    height 60px
    .sudoku-cell
      height 60px

.sudoku-cell
  float left
  width 59px
  height 59px
  text-align center
  line-height 64px
  font-size 20pt
  border-right 1px solid #ccc
  &:nth-child(3),
  &:nth-child(6)
    border-right 1px solid #333
  &:nth-child(9)
    border-right 0
    width 60px
  &.system
    background #eee
  &.selected
    background #ffa
  &.system.selected
    background #f7f7a2
